.multiple {
    width:400px;
    height:50px;
}
.mon-container {
  display: block;
  position: relative;
  padding-left: 35px;
  margin-bottom: 12px;
  font-size:16px;
  cursor: pointer;
  -webkit-user-select: none;
  -moz-user-select: none;
  -ms-user-select: none;
  user-select: none;
}

.mon-container input {
  position: absolute;
  opacity: 0;
  cursor: pointer;
  height: 0;
  width: 0;
}

.checkmark {
  position: absolute;
  top: 0px;
  left: 0;
  height: 25px;
  width: 25px;
  color:white;
  opacity:10;
  background-color: #888E8E;
  align:center;
}

.mon-container:hover input ~ .checkmark {
  background-color: #343737;
}

.mon-container input:checked ~ .checkmark {
  background-color: #343737;
  color:white;
  font-weight:bold;
}

.checkmark:after {
  content: "";
  position: absolute;
  display: none;
}

.mon-container input:checked ~ .checkmark:after {
  display: block;
}

.mon-container .checkmark:after {
  left: 9px;
  top: 5px;
  width: 5px;
  height: 10px;
  border: solid white;
  border-width: 0 3px 3px 0;
  -webkit-transform: rotate(45deg);
  -ms-transform: rotate(45deg);
  transform: rotate(45deg);
}
